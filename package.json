{
  "name": "my-app",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "devDependencies": {
    "eslint": "^8.x.x",
    "prettier": "^3.x.x",
    "@typescript-eslint/parser": "^6.x.x",
    "@typescript-eslint/eslint-plugin": "^6.x.x",
    "eslint-config-prettier": "^9.x.x",
    "eslint-plugin-prettier": "^6.x.x",
    "eslint-plugin-react": "^7.x.x"
  },
  "scripts": {
    "lint": "eslint \"{frontend,backend}/src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix \"{frontend,backend}/src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"{frontend,backend}/**/*.{js,jsx,ts,tsx,json,md}\""
  }
}
